{
    "version": "0.2.0",
    "configurations": [

        {
            "name": "Python Debugger: Current File (Integrated Terminal)",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "purpose": ["debug-test"],
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceRoot}",
                "PYTEST_ADDOPTS": "--no-cov"
            }
          },
          {
            "name": "Python Debugger: Current File (External Terminal)",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "externalTerminal",
            "env": {
                "PYTHONPATH": "${workspaceRoot}",
                "PYTEST_ADDOPTS": "--no-cov"
            }
          }
    ]
}
